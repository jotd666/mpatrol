osd_clear_background:
	movem.l	d0-d7/A0-A6,-(a7)
	
	bsr		reset_background_dynamic_colors
	
	lea		_custom,a5
	* compute height
	moveq	#0,d1
	move.b	previous_blue_layer_y,d1
	move.w	#Y_MAX-32,d4
	sub.w	d1,d4
